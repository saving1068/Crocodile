/* pages/cashier/cashier.wxss */

.cashier{width: 100%; height: 100%;background-color: #f0f0f0;}
	
	.indent{width: 100%;height: 90rpx;background-color: #fff;display: flex;justify-content:space-between;padding: 0 30rpx;line-height: 90rpx;font-size: 30rpx;margin-bottom: 20rpx;box-sizing: border-box;border-top:1rpx solid #dedede; }
	.indent_left{color: #333333;}
	.indent_right{color: #fe5043;}
	
	.payment_method{width: 100%;height: 80rpx;line-height: 80rpx;padding-left: 30rpx;color: #333333;font-size: 30rpx;background-color: #fff;}
	
	.means{width: 100%;height: auto;background-color: #fff;}
	.method{width: 100;height: 140rpx;border-top: 1rpx solid #e5e5e5;display: flex;padding: 0 30rpx;}
  .method:last-child{
    border-bottom:1rpx solid #dedede; 
  }
	.method_a{width: 44rpx;height: 140rpx;display: flex;align-items: center;}
	.wechat{display: inline-block;width: 44rpx;height: 44rpx;}
	.alipay{display: inline-block;width: 44rpx;height: 44rpx; }
	.my_wallet{display: inline-block;width: 44rpx;height: 44rpx; }
	
	.method_b{width: 633rpx;height: 140rpx;padding: 23rpx 0 23rpx 20rpx;}
	.payment{font-size: 30rpx;color: #333333;height: 48rpx;line-height: 48rpx;}
	.recommend{font-size: 28rpx;color: #9f9f9f;height: 46rpx;line-height: 46rpx;}
	
	.method_c{width: 13rpx;height: 140rpx;line-height: 140rpx;}
	.arrows{display: inline-block;width: 13rpx;height: 23rpx; }
	
	.van-popup--bottom{height: 50%;}
	.van-password-input{padding-top: 50rpx;}