<view class='warp'>
  <view class='title'>请绑定手机号</view>
  <view class='login_window'>
    <view class='login_box'>
      <view class='login_ipong'>
        <input class='login_top' placeholder='请输入手机号' placeholder-style='color:"#cccccc"'></input>
      </view>
      <view class='login_password'>
        <view class='login_password_val'>
          <input class='login_bottom' placeholder='请输入验证码' placeholder-style='color:"#cccccc"'></input>
          <view class='getM' wx:if="{{ifo}}">{{time}}s</view>
          <view class='getM' bindtap='getSmsCode' wx:if="{{!ifo}}">获取验证码</view>
        </view>
      </view>
    </view>
  </view>
  <view class='login_btn'>登录</view>
</view>