/* pages/orderSubmit/orderSubmit.wxss */
@import '../../weui/weui.wxss';
.container{background-color: #f3f3f3;width: 100%;height: 100%;}
	
	/*弹框*/
	
	
	/*添加地址*/
	.add_Region{width: 100%;height: 144rpx;background-color: #fff;position: relative;margin-bottom: 20rpx;border-top:1rpx solid #dedede;}
	.Region_div_a{width: 100%;display: flex;height: 144rpx;padding: 0 24rpx;}
	.Region_span_a{width: 42rpx;height: 40rpx;position:relative;top: 50rpx;}
	.Region_span_b{text-align: right;width: 13rpx;height: 23rpx;position:relative;top: 60rpx;right: 20rpx;}
	.Region_img_a{
    width: 42rpx;height: 40rpx;position:relative;top: 70rpx;
  }
  	.Region_img_b{
    width: 13rpx;height: 23rpx;position:relative;top: 80rpx;
    right: 40rpx;
  }
	.Region_p{line-height: 146rpx;width: 86%;padding-left: 20rpx;font-size:30rpx;color: #333333;}
	.Region_ul_a{width: 100%;height: 4rpx;position: absolute;bottom: 0;display: flex;flex-wrap: nowrap;padding-left: 17rpx;}
	.Region_li{width: 8.3%;margin-right: 17rpx;}
	.li_a{background-color: #2f89c9;}
	.li_b{background-color: #f2ca74;}
	.li_c{background-color: #ff4f2c;}
	
	/*已有地址*/
	.add_Regions{width: 100%;height: 181rpx;background-color: #fff;position: relative;margin-bottom: 20rpx;border-top:1rpx solid #dedede; }
	.have_top{width: 90%;height: 140rpx;font-size: 30rpx;color: #333333;padding: 16rpx 24rpx 16rpx 24rpx;}
	.have_p_top{position: relative;width: 100%; height: 54rpx;line-height: 54rpx;}
	.have_phone{position: absolute;right: 30rpx;}
	.have_p_bottom{width: 100%;display: -webkit-box;-webkit-box-orient: vertical !important;-webkit-line-clamp: 2;overflow: hidden;min-height: 78rpx;     }
	
	/*商品信息*/
	.merchandise_news{width:100%;background-color: #fff;padding-left: 24rpx;margin-bottom: 20rpx;box-sizing: border-box;}
	.merchandise_title{width:100%;height: 86rpx;line-height: 86rpx;font-size: 30rpx;}
	.lis{border-top: 1rpx solid #e5e5e5;padding:20rpx 0;display: flex;box-sizing: border-box;}
	.merchandise_li_a{width: 100%;height: 200rpx;}
	.merchandise_li_div_a{width: 25%; height: 160rpx;border: 1rpx solid #dedede;box-sizing: border-box;border-radius: 10rpx; display: flex; justify-content: center;align-items: center;}
	.merchandise_li_a_img{width: 100%;height: 100%;}
	.merchandise_li_div_b{padding: 0 24rpx;position: relative;width:72%;box-sizing: border-box;}
	.merchandise_li_p_a{width: 100%; font-size: 25rpx;color: #333333;}
	.merchandise_li_p_b{width: 90%;height: 36rpx;line-height: 36rpx; position: absolute;bottom: 0;}
	.merchandise_span_a{ font-size: 25rpx;color: #333333;}
	.merchandise_span_b{font-size: 23rpx;color: #666666;float: right;position: relative;top: 2rpx;}
	.merchandise_li_b{width: 100%;height: 86rpx;line-height:46rpx;display: flex;justify-content:space-between;padding-right: 48rpx;position: relative}
  .merchandise_li_b image{
		position: absolute;
		right: 24rpx;
		top: 32rpx;
		width: 13rpx;
		height: 23rpx;
	}
	.li_b_span_a,.li_b_span_b{font-size: 30rpx;color: #333333;}
	
	/*用户留言*/
	.leave_word{width: 100%;height: 200rpx;background-color: #fff;display: flex;justify-content: center;align-items: center;margin: 0 auto;padding: 30rpx 24rpx;box-sizing: border-box; position: relative}
  .leave_word input{
    
     min-height: 0 !important;
     
    background: #e5e5e5;
  }
	.leave_textarea{background-color: #f3f3f3;width: 100%;height: 100%;padding: 20rpx 24rpx;font-size: 30rpx;border: none;color: #666;}
	.warp{position: relative;}
	.numb{position: absolute;bottom: 40rpx;right: 48rpx;color: #999999;font-size: 30rpx;}
	
	/*提交订单栏*/
  .bottom{
    width: 100%;
  height: 100rpx;
  background: #ffffff;
  border-top:1rpx solid #dedede; 
  display: flex;
  z-index: 999;
 position: fixed;
 bottom: 0;
 left: 0;
 line-height: 100rpx;
  }
  .bottom .left{
    width: 70%;
    font-size: 32rpx;
    position: relative;
    text-align: right;
  }
  .bottom .right{
    width: 30%;
    text-align: center;
    font-size: 32rpx;
    color: #ffffff;
    background: #e6bf6b;
  }
  .leave_word input{
    
  }

  .wx-mask{
  position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-dialog{
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}
.wx-dialog-title{
    font-size: 30rpx;
    padding: 15px 15px 5px;
}
.wx-dialog-content{
    padding: 5px 15px 5px;
    min-height: 40px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    text-align: left;
}
.footer{
    display: flex;
    align-items: center;
    position: relative;
    line-height: 45px;
    font-size: 17px;
}
.btn{
  background: white;
  border: none;
    outline: none;
    -webkit-flex: 1;
   
    font-size: 15px;
    background: white;
    flex: 1;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}


.cancel{
    color: #353535;
}
.comfirm{
    color: #e6bf6b;
}

.content{padding-bottom: 84rpx;}
.content image{
  width: 100% !important;
}
.left .icon{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.left .icon image{
   width: 40rpx;
  height: 40rpx;
  float: left;
}
.leave_word input{
  text-indent: 20rpx;
  font-size: 30rpx;
}