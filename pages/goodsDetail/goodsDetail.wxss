.detail_box{height: 180rpx;width: 100%;padding: 24rpx;box-sizing:border-box; }
	.detail_box_p{font-weight: 550;font-size: 28rpx;color: #1a1a1a;}
	.price_p{padding-top: 20rpx;height: 38rpx;line-height: 38rpx;}
