	.price_span_b{display: inline-block;width: 50%; color: #666666;font-size: 28rpx;text-align: right;}

.bottom{position: fixed;width: 100%;bottom: 0;left: 0;height: 98rpx;background: #FFFFFF;display: flex;color: #FFFFFF;}
.bottom_left{width: 200rpx}
