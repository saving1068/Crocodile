.head{height: 220rpx;background: salmon;position: relative}
.head_poin{position: absolute;top: 0;left: 0;right: 0;bottom: 0;width: 160rpx;height: 150rpx;margin: auto;text-align: center;color: #e6bf6b;}
.head_poin_top{padding: 10rpx 0;font-size:40rpx;border-bottom: 2rpx solid #e6bf6b; }
.head_poin_font{line-height: 70rpx;}
page {display: flex;  flex-direction: column;  width: 100%;  height: 100%;  flex-wrap: nowrap;  justify-content: flex-start;  align-items: stretch;  font-size: 28rpx;  }  
image{height: 100%;width: 100%;}
.box {margin: 20rpx;}  
.box-flex { display: -webkit-flex;  display: flex;  flex-wrap: wrap;  }  
.flex-item {flex-flow: nowrap;  flex-grow: 1;  flex-shrink: 1;width: 13.6%; }  
.item-content {text-align: center;color: #000;}  
.item-content-current-day {flex-grow: 2;  }  
.week{background: #b1b1b1;width: 695rpx;margin: 0 auto}
.week_item{background: transparent;color: #fff;width: 14.2%;height: 52rpx;line-height: 52rpx;}
.week_item view{color: #fff}
.date_box{width: 695rpx;margin: 0 auto;padding: 35rpx 0;}
.day_item{height: 50rpx;width: 50rpx;text-align: center;line-height: 50rpx;border-radius: 50%;margin:10rpx 20rpx;color: #000}
.active{	background: #e6bf6b;
		color: #fff;}
.bk-color-day {background-color: #e6bf6b;color: #fff}
.top{height: 100rpx;padding: 0 85rpx;}
.left{width: 18rpx;height: 25rpx;}
.middle{padding:0 205rpx }
.right{width: 18rpx;height: 25rpx;}
.top_item{float: left;line-height: 100rpx;}
.bottom_btn{width: 700rpx;height: 80rpx;text-align: center;line-height: 80rpx;position:absolute;bottom: 50rpx;left: 27rpx;background: #e6bf6b;color: #fff;border-radius: 10rpx;font-size: 28rpx;}
.bk_color_day_grod{color:#cccccc;}



.wx-mask{
  position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-dialog{
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}
.wx-dialog-title{
    font-size: 18px;
    padding: 15px 15px 5px;
}
.wx-dialog-content{
    padding: 15px 15px 5px;
    min-height: 40px;
    font-size: 14px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}
.footer{
    display: flex;
    align-items: center;
    position: relative;
    border-top:2rpx solid #dedede; 
    line-height: 45px;
    font-size: 17px;
}
.btn{
  background: white;
  
    outline: none;
    -webkit-flex: 1;
   
    font-size: 15px;
    background: white;
    flex: 1;
  
    position: relative;
}
.btn::after{
border: none ;
}

.cancel{
    color: #353535;
}
.comfirm{
    color: #e6bf6b;
}
.footer .comfirm::after{
  border-left:2rpx solid #dedede; 
}


