/* pages/components/bindMobile/bindMobile.wxss */


/* 手机绑定  */
.bind__main {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 111;
}
.totalPay{
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 42rpx;
  border-bottom:1rpx solid #e5e5e5; 
  margin: auto
}
.bind__main .bind {
  margin: 200rpx auto 0 auto;
  width: 600rpx;
  height: 552rpx;
  border-radius: 20rpx;
  background: #fff;
}

.bind__main .bind .bind__title {
  height: 90rpx;
  line-height: 90rpx;
  font-weight: 600;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.bind__input {
  padding: 0 45rpx;
  margin: 45rpx 0;
}

.bind__input .input__phone {
  display: flex;
  padding: 14rpx 18rpx;
  flex-direction: row;
  border: 1px solid #eee;
}


.bind__input .input__phone .input__phone__value,
.bind__input .input__phone .input__phone__text {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  width: 160rpx;
}

.bind__input .input__phone .input__phone__text {
  position: relative;
  color: #e6bf6b;
}

.bind__input .input__phone .input__phone__text::before {
  content: '';
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 30rpx;
  width: 2rpx;
  border: 1rpx solid #eee;
}

.bind__input .input__phone .input__phone__value {
  padding-right: 40rpx;
  width: 280rpx;
}

.bind__input .input__verify {
  margin-top: 30rpx;
  padding: 14rpx 18rpx;
  border: 1px solid #eee;
}

.bind__input .input__verify .input__verify__value {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}

.bind__btn {
  display: flex;
  flex-direction: row;
  height: 92rpx;
  line-height: 92rpx;
  border-top: 1rpx solid #eee;
}

.bind__btn .bind__btn__cancel,
.bind__btn .bind__btn__submit {
  width: 50%;
  height: 92rpx;
  font-size: 34rpx;
  text-align: center;
}

.bind__btn .bind__btn__submit.w100 {
  width: 100%;

}
.bind__btn .bind__btn__submit {
  color: #e6bf6b;
}
/*垂直居中*/
.theCenter{
  position: absolute;
  top:50%;
  left: 50%;
  width: 100%;
  transform:translate(-50%,-50%);
}
.bind__input .input__phone .input__phone__text.c-898989{
  color: #898989;
  text-align: center;
}