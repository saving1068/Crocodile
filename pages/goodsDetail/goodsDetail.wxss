	.bottom .serve{width: 50%;border-top:2rpx solid #CCCCCC ;height: 96rpx;float: left}
	.bottom .serve image{width:50rpx;height: 50rpx;float: left;margin-left: 25rpx;margin-top:10rpx }
	.bottom .serve text{width: 100%;float: left;height: 30rpx;color: #666666;text-align: center;line-height: 40rpx;font-size: 26rpx;}
	.bottom .buy{width: 37%;background: #e6bf6b;font-size: 30rpx;text-align: center;}
	.bottom .free{width: 37%;background: #333333;	font-size:30rpx;text-align: center;}
	.bottom .notFree{width: 37%;background: #cccccc;	font-size: 30rpx;text-align: center;}


.wx-mask{
  position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-dialog{
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}
.wx-dialog-title{
    font-size: 30rpx;
    padding: 15px 15px 5px;
}
.wx-dialog-content{
    padding: 5px 15px 5px;
    min-height: 40px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    text-align: left;
}
.footer{
    display: flex;
    align-items: center;
    position: relative;
    line-height: 45px;
    font-size: 17px;
}
.btn{
  background: white;
  border: none;
    outline: none;
    -webkit-flex: 1;
   
    font-size: 15px;
    background: white;
    flex: 1;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}


.cancel{
    color: #353535;
}
.comfirm{
    color: #e6bf6b;
}

.content{padding-bottom: 84rpx;}
.content image{
  width: 100% !important;
}