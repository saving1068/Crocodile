.submit{
  margin: 60rpx auto;
}
.active{
  background: #41b1bf;
}

.city__picker{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  font-size: 28rpx;
  background: #fff;
  z-index: 3;
}

.city__btn{
  width: 690rpx;
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #007aff;
  background: #ededed;
  font-size: 34rpx;
}

.city__item{
  line-height: 50px;
}

/*遮盖层*/
.shadow{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}

/*浮动*/
.fl{
  float: left;
}
.fr{
  float: right;
}